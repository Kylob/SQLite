{
    "name": "bootpress/sqlite",
    "description": "Extends the BootPress Database Component to create and update tables and indexes at will, and simplifies FTS full-text searching.",
    "keywords": ["bootpress", "sqlite", "sqlite3", "fts", "database"],
    "homepage": "https://www.bootpress.org/components/sqlite.html",
    "license": "MIT",
    "authors": [
        {
            "name": "Kyle Gadd",
            "email": "kyle.gadd@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "ext-sqlite3": "*",
        "bootpress/database": "^1.0"
    },
    "require-dev": {
        "bootpress/page": "^1.0",
        "symfony/yaml": "^2.3||^3.0",
        "phpunit/phpunit": "^4.0",
        "friendsofphp/php-cs-fixer": "^1.0",
        "squizlabs/php_codesniffer": "^2.5"
    },
    "autoload": {
        "psr-4": { "BootPress\\SQLite\\": "src" }
    }
}
